{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Metadata",
  "description": "sDAS metadata configuration",
  "type": "object",
  "properties": {
    "api_key": {
      "description": "The token used to connect to the external data store.",
      "type": "string"
    },
    "features": {
      "description": "Data feature configuration for acquiring external data.",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "#/definitions/feature"
      }
    },
    "symbols": {
      "description": "Company symbols that data should be extracted for.",
      "type": "array",
      "items": {
        "type": "string",
        "minItems": 1
      }
    },
    "output": {
      "type": "object",
      "$ref": "#/definitions/output"
    }
  },
  "required": [
    "api_key",
    "features",
    "symbols",
    "output"
  ],
  "definitions": {
    "feature": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the data feature to extract.",
          "type": "string"
        },
        "description": {
          "description": "Feature description of data acquired.",
          "type": "string"
        },
        "handler": {
          "description": "Name of the handler to be used for data acquisition.",
          "type": "string"
        },
        "options": {
          "description": "Collection of additional feature configuration options.",
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/option"
          }
        },
        "uri": {
          "description": "Feature uri to retrieve data from",
          "type": "string"
        }
      },
      "required": [
        "name",
        "handler",
        "uri"
      ]
    },
    "option": {
      "type": "object",
      "properties": {
        "name": {
          "description": "The feature option name.",
          "type": "string"
        },
        "value": {
          "description": "The feature option value.",
          "type": [
            "number",
            "string"
          ]
        }
      },
      "required": [
        "name",
        "value"
      ]
    },
    "output": {
      "type": "object",
      "properties": {
        "format": {
          "description": "Output formatter to return data as, e.g. 'file'.",
          "type": "string"
        },
        "properties": {
          "description": "Additional output configuration values",
          "type": "object"
        }
      },
      "required": [
        "format"
      ]
    }
  }
}